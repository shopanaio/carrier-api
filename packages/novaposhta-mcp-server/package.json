{
  "name": "@shopana/novaposhta-mcp-server",
  "version": "0.0.1-alpha.0",
  "description": "MCP Server for Nova Poshta API integration with AI assistants",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "novaposhta-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --format=esm --outfile=dist/index.js --external:@modelcontextprotocol/* --banner:js=\"import { createRequire } from 'module'; const require = createRequire(import.meta.url);\"",
    "dev": "npm run build && node dist/index.js",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "mcp",
    "nova-poshta",
    "ai",
    "assistant",
    "cli"
  ],
  "author": "Shopana IO",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.22.0",
    "@shopana/novaposhta-api-client": "npm:@shopana/novaposhta-api-client@^0.0.1-alpha.2",
    "@shopana/novaposhta-transport-fetch": "npm:@shopana/novaposhta-transport-fetch@^0.0.1-alpha.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "esbuild": "^0.19.0",
    "tsx": "^4.1.0",
    "typescript": "^5.3.3",
    "vitest": "^1.0.0"
  }
}
