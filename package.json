{
  "name": "@shopana/carrier-api",
  "version": "1.0.0",
  "private": true,
  "description": "Fully typed Nova Poshta API client for Node.js and browsers with enterprise-grade features",
  "workspaces": [
    "packages/*",
    "tests"
  ],
  "scripts": {
    "build": "yarn workspace @shopana/novaposhta-api-client build",
    "dev": "yarn workspace @shopana/novaposhta-api-client dev",
    "test": "yarn workspace @shopana/tests test",
    "test:watch": "yarn workspace @shopana/tests test:watch",
    "test:coverage": "yarn workspace @shopana/tests test:coverage",
    "lint": "eslint packages/novaposhta-api-client/src/**/*.ts",
    "lint:fix": "eslint packages/novaposhta-api-client/src/**/*.ts --fix",
    "format": "prettier --write \"packages/**/*.{ts,tsx,js,jsx,json,md}\" \"tests/**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"packages/**/*.{ts,tsx,js,jsx,json,md}\" \"tests/**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "yarn workspaces foreach run type-check"
  },
  "keywords": [
    "nova-poshta",
    "shipping",
    "logistics",
    "api-client",
    "typescript",
    "ukraine",
    "delivery",
    "tracking",
    "waybill"
  ],
  "author": "Nova Poshta Client Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/phl-portal/novaposhta-client.git"
  },
  "bugs": {
    "url": "https://github.com/phl-portal/novaposhta-client/issues"
  },
  "homepage": "https://github.com/phl-portal/novaposhta-client#readme",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "rollup": "^4.5.0",
    "rollup-plugin-dts": "^6.1.0",
    "ts-jest": "^29.1.1",
    "tslib": "^2.6.2",
    "typedoc": "^0.25.4",
    "typescript": "^5.2.2"
  }
}
