      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"modelName\": \"Address\",\n  \"calledMethod\": \"searchSettlements\",\n  \"methodProperties\": {\n    \"CityName\": \"Київ\",\n    \"Limit\": \"50\",\n    \"Page\": \"1\"\n  }\n}"
        },
        "url": {
          "raw": "{{BASE_URL}}",
          "host": ["{{BASE_URL}}"]
        },
        "description": "Search settlements by name. All parameters required: CityName, Limit, Page. Returns SettlementRef + deliveryCity (CityRef) + warehouse count + area/region info."
