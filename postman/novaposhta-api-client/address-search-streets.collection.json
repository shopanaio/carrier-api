{
  "info": {
    "name": "Nova Poshta - Search Streets",
    "description": "Online search for streets in settlements - returns GPS coordinates (lat/lon) for precise geolocation",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Search Streets - Basic",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"modelName\": \"Address\",\n  \"calledMethod\": \"searchSettlementStreets\",\n  \"methodProperties\": {\n    \"StreetName\": \"Хрещатик\",\n    \"SettlementRef\": \"e718a680-4b33-11e4-ab6d-005056801329\",\n    \"Limit\": \"50\"\n  }\n}"
        },
        "url": {
          "raw": "{{BASE_URL}}",
          "host": ["{{BASE_URL}}"]
        },
        "description": "Search streets in settlement. Required: StreetName, SettlementRef (from searchSettlements). Returns street with GPS coordinates (lat/lon), UA/RU names, full formatted name, and type."
      },
      "response": []
    },
